{
  "name": "italian-jokes-mcp",
  "displayName": "Italian Jokes MCP ðŸ‡®ðŸ‡¹",
  "version": "1.0.0",
  "description": "A Model Context Protocol server that provides Italian jokes with humor and cultural flair. Features multiple joke categories, streaming support, and full MCP compatibility.",
  "author": "Italian Jokes MCP Team",
  "license": "MIT",
  "homepage": "https://github.com/italian-jokes-mcp/italian-jokes-mcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/italian-jokes-mcp/italian-jokes-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/italian-jokes-mcp/italian-jokes-mcp/issues"
  },
  "keywords": [
    "mcp",
    "italian",
    "jokes",
    "humor",
    "entertainment",
    "culture",
    "fastmcp"
  ],
  "categories": [
    "entertainment",
    "culture",
    "humor"
  ],
  "icon": "ðŸ‡®ðŸ‡¹",
  "mcpServers": {
    "italian-jokes": {
      "command": "python",
      "args": ["server.py"],
      "cwd": ".",
      "env": {},
      "capabilities": {
        "tools": true,
        "resources": true,
        "prompts": true,
        "logging": true
      },
      "transport": {
        "type": "stdio"
      }
    }
  },
  "httpServers": {
    "italian-jokes-http": {
      "command": "python",
      "args": ["http_server.py"],
      "cwd": ".",
      "env": {
        "PORT": "8000",
        "HOST": "0.0.0.0"
      },
      "port": 8000,
      "capabilities": {
        "rest": true,
        "sse": true,
        "websocket": true,
        "streaming": true
      }
    }
  },
  "tools": [
    {
      "name": "get_italian_joke",
      "description": "Get a random Italian joke from the API",
      "parameters": {
        "type": "object",
        "properties": {
          "subtype": {
            "type": "string",
            "description": "Optional joke subtype (All, One-liner, Observational, Stereotype, Wordplay, Long)",
            "enum": ["All", "One-liner", "Observational", "Stereotype", "Wordplay", "Long"]
          }
        }
      }
    },
    {
      "name": "get_joke_by_category",
      "description": "Get an Italian joke from a specific category",
      "parameters": {
        "type": "object",
        "properties": {
          "category": {
            "type": "string",
            "description": "The joke category",
            "enum": ["One-liner", "Observational", "Stereotype", "Wordplay", "Long"]
          }
        },
        "required": ["category"]
      }
    },
    {
      "name": "get_multiple_jokes",
      "description": "Get multiple Italian jokes at once",
      "parameters": {
        "type": "object",
        "properties": {
          "count": {
            "type": "integer",
            "description": "Number of jokes to fetch (1-10)",
            "minimum": 1,
            "maximum": 10,
            "default": 3
          },
          "subtype": {
            "type": "string",
            "description": "Optional joke subtype filter",
            "enum": ["All", "One-liner", "Observational", "Stereotype", "Wordplay", "Long"]
          }
        }
      }
    },
    {
      "name": "list_joke_categories",
      "description": "List all available joke categories/subtypes",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "health_check",
      "description": "Check the health status of the MCP server and API connectivity",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    }
  ],
  "resources": [
    {
      "name": "italian-jokes-api-info",
      "description": "Information about the Italian Jokes API endpoints and usage",
      "mimeType": "text/plain"
    }
  ],
  "prompts": [
    {
      "name": "italian-joke-session",
      "description": "Start an interactive Italian joke session with category selection and examples"
    }
  ],
  "requirements": {
    "python": ">=3.8",
    "packages": [
      "fastmcp>=2.0.0",
      "requests>=2.31.0",
      "pydantic>=2.5.0",
      "uvicorn>=0.24.0",
      "fastapi>=0.104.0",
      "sse-starlette>=1.6.0"
    ]
  },
  "configuration": {
    "properties": {
      "api_timeout": {
        "type": "number",
        "description": "Timeout for API requests in seconds",
        "default": 10,
        "minimum": 1,
        "maximum": 30
      },
      "default_joke_count": {
        "type": "integer",
        "description": "Default number of jokes to fetch",
        "default": 3,
        "minimum": 1,
        "maximum": 10
      },
      "enable_logging": {
        "type": "boolean",
        "description": "Enable detailed logging",
        "default": true
      },
      "http_port": {
        "type": "integer",
        "description": "Port for HTTP server",
        "default": 8000,
        "minimum": 1024,
        "maximum": 65535
      }
    }
  },
  "permissions": {
    "network": {
      "domains": [
        "italian-jokes.vercel.app"
      ],
      "description": "Access to Italian Jokes API for fetching jokes"
    }
  },
  "compatibility": {
    "mcp": ">=1.0.0",
    "claude": ">=3.0.0",
    "platforms": ["windows", "macos", "linux"]
  },
  "files": [
    "server.py",
    "http_server.py",
    "requirements.txt",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "install": "pip install -r requirements.txt",
    "start": "python server.py",
    "start-http": "python http_server.py",
    "test": "python -m pytest tests/",
    "lint": "flake8 *.py"
  },
  "engines": {
    "python": ">=3.8"
  }
}